brownishGray = #c8b9b9
brownishDeepGray = #918686
customMagenta = #ff004e
wine = #920631

@import mixins
@import defaults
@import coffee-drag-slider

/* Header Styles */

#mainHeader
  height 130px

#logoTitle
  position absolute
  font-size 3.0625rem
  top 50%
  margin-top -2.0625rem
  font-weight normal
  letter-spacing -2px
  color black
  z-index 10

#sliderCover
  height 30px
  overflow hidden
  background-color white

#mainContent
  margin-top 15px
  padding-bottom 60px
  color brownishDeepGray

@media (max-width: 850px)

  body
    border-top none

  #mainHeader
    height 50px
    position fixed
    top 0
    width 100%
    z-index 1
    background-color white
    box-shadow 0 0 4px rgba(78, 78, 78, 0.55)

  #logoTitle
    width 50%
    margin-left 25%
    margin-top 0
    top 0
    text-align center
    font-size 2em

  #mainNav
    height 40px
    width 100%
    top 0
    margin 0
    overflow hidden

  #mainNav li
    display block!important
    margin 0

  #mainNav li a, #mainNav .mainLvl
    padding 22px 0
    box-shadow 0 4px 2px -1px rgba(0, 0, 0, 0.57) inset

  #mobileNavBar
    display block
    height 50px
    padding 0 5px
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none

  .iconMenu
    width 25px
    height 39px
    cursor pointer

  .openMenu
    height auto!important

  .iconMenuStripes
    display block
    height 3px
    width inherit
    background #000000
    position absolute
    top 19px

  .iconMenuStripes:before, .iconMenuStripes:after
    content ''
    display block
    height 3px
    background #000000
    margin 11px 0

  .iconMenuStripes:before
    margin-top -7px

  #mainNav .current_page_item
    background-color customMagenta!important
    box-shadow 4em 0 0 customMagenta, -4em 0 0 customMagenta!important

  #mainContent
    margin-top 80px

/* Main Content */

.navCrumb
  font-size 1.6rem
  color #000000
  font-weight normal
  margin 15px 0

.navCrumb .fa
  color #920631
  margin-left 0.5rem
  font-size 1.5rem

#bioPicture img
  width 216px
  height 216px
  margin-bottom 25px
  border-radius(50%)

#bioContent
  line-height 1.625em
  text-align justify

#bioDetails
  text-align center

#bioDetails .bioDetailsData
  padding 0 60px

#bioDetails strong
  font-weight 600
  color #262622
  font-size 1.0625em
  margin-right 0.2em

/* Home Styles */

/* -> homeQuote */

#homeQuote
  margin 35px auto
  width 70%

#homeQuote p
  font-size 24px
  font-weight 300
  text-align right
  margin-bottom 10px

#homeQuote footer
  text-align right
  color customMagenta

/* -> twitterFeed */

.twitterFeed, iframe
  display block
  width 100%!important
  height 490px!important
  max-width 744px!important
  padding 0 10px
  margin auto


/* Bio Styles */


/* Gallery Styles */

.gallery li
  display inline-block
  margin 10px

/* Blog Styles */

#blogFeed
  margin 0

.entryFeed
  height auto
  font-size 12px
  margin-bottom 12px
  position relative
  text-align justify
  overflow hidden
  background-color white
  cursor pointer
  color black

.entryThumb
  width 182px
  max-width 100%
  height 166px
  float left
  margin-right 15px
  opacity 0.8

.entryFeed img
  max-width 100%
  display block
  margin auto

.entryFeed .entryTitle
  font-size 1rem

.publishDate
  color #d4c2c2
  text-transform uppercase
  margin 4px 0
  display block

.feedText
  overflow hidden
  font-size 0.937rem
  color brownishDeepGray

.starRating
  font-size 1.2rem

.starRating li
  display inline-block
  margin-right 4px

@media (max-width: 680px)
  .entryThumb
    float none!important
    opacity 1
    margin 15px auto


/* Footer */

#mainFooter
  background #f7f8f2
  padding-bottom 35px
  color brownishGray

/* -> footerNav */

#footerNav
  padding 40px

#footerNav a
  display inline-block
  color brownishGray
  padding-right  6px
  margin-bottom 5px
  font-size 14px

#footerNav .current_page_item
  box-shadow 8px 0 0 -2px #ff004e

/* -> footerContactDetails */

.footerContactDetails
  padding 40px
  min-height 200px
  border-left 1px solid #DEDEDE
  border-right 1px solid #DEDEDE

.footerContactDetails h5
  font-size 20px

.footerContactDetails ul
  margin 5px 0
  list-style square

.footerContactDetails li
  margin-left 1em

.footerContactDetails small
  font-size 13px


/* -> socialIcons */

.socialIcons
  padding 40px
  text-align center

.socialIcons h5
  color #ff004e !important
  font-weight normal
  font-size 16px
  margin-bottom 13px

.socialIcons li
  display inline-block
  margin 0 13px
  font-size 37px
  text-shadow 0 0 1px rgba(255, 0, 78, 0.42)

.socialIcons .fa
  color customMagenta!important